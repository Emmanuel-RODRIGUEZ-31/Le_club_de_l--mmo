<div class="container">
	<form action="" method="post">

		<div>
			<input type="text" name="lastname" placeholder="NOM"></input>
		</div>

		<div>
			<input type="text" name="firstname" placeholder="Prénom"></input>
		</div>

		<div>
			<input type="email" name="user_email" placeholder="Email"></input>
		</div>

		<div>
			<input type="number" name="phone_number" placeholder="Numéro de téléphone"></input>
		</div>
		<div>
			<select id="subject" name="subject">
				<option value="null">Veuillez choisir un sujet</option>
				<option value="loc">Location</option>
				<option value="achat">Achat</option>
				<option value="rdv">Prise de rendez-vous</option>
				<option value="pres">Présentation d'un bien</option>
			</select>
		</div>

		<div>
			<textarea name="message" placeholder="Votre message" rows="10" cols="30"></textarea>
		</div>

		<div>
			<button type="submit">Envoyer votre message</button>
		</div>

	</form>
</div>