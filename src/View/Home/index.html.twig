{% extends 'layout.visiteur.html.twig' %}

{% block content %}
<div id="promo">
    <h1 class="text-primary text-center">Les coups de coeur de l'agence</h1>
    <div class="container">
        <div id="demo" class="carousel slide mt-3" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/../assets/images/index/appart-exemple-carroussel.jpg" alt="Carrousel slide 1" class="d-block w-100">
            </div>
            <div class="carousel-item">
              <img src="/../assets/images/index/appart-exemple-carroussel2.jpg" alt="Carrousel slide 2" class="d-block w-100">
            </div>
            <div class="carousel-item">
              <img src="/../assets/images/index/appart-exemple-carroussel3.jpg" alt="Carrousel slide 3" class="d-block w-100">
            </div>
          </div>
        </div>
      </div>
    </br>
</div>
<div id="slogans">
    <h1 class="text-primary text-center">Notre agence</h1>
    <div class="container">
        <div class="row mt-4 mb-5">
            <div class='col-12 col-md-6 col-lg-3'>
                <div class="card bg-secondary pt-4 h-100 shadow-sm">
                    <img src="/../assets/images/index/experience.svg" class="card-img-top" alt="Experience"
                        height="100">
                    <div class="card-body">
                        <p class="card-text text-center">Une expérience de 16 ans dans l'immobilier sur Orléans</p>
                    </div>
                </div>
            </div>
            <div class='col-12 col-md-6 col-lg-3'>
                <div class="card bg-secondary pt-4 h-100 shadow-sm">
                    <img src="/../assets/images/index/client.svg" class="card-img-top" alt="Client" height="100">
                    <div class="card-body">
                        <p class="card-text text-center">Un suivi personnalisé et un interlocuteur unique</p>
                    </div>
                </div>
            </div>
            <div class='col-12 col-md-6 col-lg-3'>
                <div class="card bg-secondary pt-4 h-100 shadow-sm">
                    <img src="/../assets/images/index/appointment.svg" class="card-img-top" alt="Appointment"
                        height="100">
                    <div class="card-body">
                        <p class="card-text text-center">Des visites possibles 6 jours sur 7</p>
                        </br>
                        </br>
                        </p>
                    </div>
                </div>
            </div>
            <div class='col-12 col-md-6 col-lg-3'>
                <div class="card bg-secondary pt-4 h-100 shadow-sm">
                    <img src="/../assets/images/index/agency-connection.svg" class="card-img-top" alt="Agency"
                        height="100">
                    <div class="card-body">
                        <p class="card-text text-center">Basées dans plusieurs villes, toutes nos agences travaillent ensemble</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="recents">
    <h1 class="text-primary text-center">Nos dernières annonces</h1>
    <div class="container">
        <div class="row mb-5">
            {% for i in 0..8 %} 
                <div class="col-md-6 col-sd-12 col-lg-4">
                    {% include 'Components/_card.preview.annonce.html.twig' %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
</div>{% endblock %}